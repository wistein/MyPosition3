<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="email_String"
        android:title="@string/titel_email_string"
        android:icon="@drawable/ic_email_black_48dp"
        android:summary="@string/email_string"
        />

    <ListPreference
        android:key="updateFreq"
        android:title="@string/upd_freq"
        android:icon="@drawable/ic_schedule_black_48dp"
        android:summary="@string/upd_freq_sum"
        android:entryValues="@array/freq"
        android:entries="@array/freq_string"
        />
    
    <ListPreference
        android:key="update_Dist"
        android:title="@string/titel_pref_upddist"
        android:icon="@drawable/ic_settings_direction_black_48dp"
        android:entries="@array/dist_string"
        android:entryValues="@array/dist"
        android:summary="@string/pref_upddist"
        />

    <CheckBoxPreference
        android:key="map_Local"
        android:title="@string/titel_map_string"
        android:icon="@drawable/ic_menu_mapmode_ni"
        android:summary="@string/map_string"
        />

    <CheckBoxPreference
        android:key="screen_Orientation"
        android:title="@string/titel_screen_orientation"
        android:icon="@drawable/ic_rot_portr_landsc_black_48dp"
        android:summary="@string/screen_orientation"
        />

    <CheckBoxPreference
        android:key="show_Toast"
        android:title="@string/titel_toast_string"
        android:icon="@drawable/ic_speaker_notes_black_48dp"
        android:summary="@string/toast_string"
        />

</PreferenceScreen>

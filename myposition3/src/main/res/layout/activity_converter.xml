<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="#333393"
                android:paddingStart="10dp"
                android:paddingTop="10dip"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/decCoord"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.3"
                android:text="@string/lati"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/latDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.3"
                android:text="@string/longi"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/lonDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="#333393"
                android:paddingStart="10dp"
                android:paddingTop="10dip"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/degCoord"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonCalc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableStart="@drawable/ic_arrow_downward_black_36dp"
                android:paddingStart="22dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp" />

            <Button
                android:id="@+id/buttonCalc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableStart="@drawable/ic_arrow_upward_black_36dp"
                android:paddingStart="22dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="3"
                android:text="@string/shlati"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/degreelat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/minutelat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/secondlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="4"
                android:digits="0123456789.,"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="3"
                android:text="@string/shlongi"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/degreelon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/minutelon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/secondlon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="4"
                android:digits="0123456789.,"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="#333393"
                android:paddingStart="10dp"
                android:paddingTop="10dip"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/dist"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonCalc3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableStart="@drawable/ic_settings_ethernet_black_36dp"
                android:paddingStart="22dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.5"
                android:text="@string/lat1"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/latDec1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.5"
                android:text="@string/long1"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/lonDec1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.5"
                android:text="@string/lat2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/latDec2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_weight="1.5"
                android:text="@string/long2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/lonDec2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:digits="0123456789.,-"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dip"
                android:layout_marginTop="0dp"
                android:layout_weight="1.5"
                android:text="@string/distm"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/distRes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dip"
                android:layout_marginEnd="15dip"
                android:layout_weight="4"
                android:textSize="20sp"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#333393" />
    </LinearLayout>
</ScrollView>
